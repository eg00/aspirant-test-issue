{% extends 'main.html.twig' %}

{% block title %}{{ trailer.title }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="card my-3" >
            <div class="row no-gutters align-items-center">
                <div class="col-md-5 text-center">
                    <img src="{{ trailer.image }}" class="card-img" alt="{{ trailer.title }}" style="max-width: 200px">
                </div>
                <div class="col-md-7">
                    <div class="card-body">
                        <h5 class="card-title">{{ trailer.title }}</h5>
                        <p class="card-text"><small class="text-muted">{{ trailer.pubDate | date("m/d/Y") }}</small></p>
                        <p class="card-text">{{ trailer.description }}</p>
                        <a href="{{ trailer.link }}" class="btn btn-primary">{{ trailer.title }} on apple</a>
                    </div>
                </div>
            </div>
        </div>
        <a href="/" class="btn btn-primary">Go back</a>
    </div>
{% endblock %}
